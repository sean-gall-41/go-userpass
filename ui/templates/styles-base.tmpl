{{define "styles-base"}}
/* credits: https://www.youtube.com/watch?v=eeHqZeJ9Vqc */
<style>
  body {
    margin: 0;
    padding: 0;
    font-family: montserrat;
    background: linear-gradient(120deg, #2980b9, #8e44ad);
    height: 100vh;
    overflow: hidden;
  }

  .center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    background: white;
    border-radius: 10px;
  }

  .center h1 {
    text-align: center;
    padding: 0 0 20px 0;
    border-bottom: 1px solid silver;
    font-size: 30px;
  }

  .center p {
    text-align: center;
    padding: 0px 20px 0px 20px;
    font-size: 15px;
  }

  footer {
    margin: 10px 0;
    text-align: center;
    font-size: 12px;
    color: #a6a6a6;
  }

  footer a {
    color: #2691d9;
    text-decoration: none;
  }

  footer a:hover {
    text-decoration: underline;
  }
</style>
{{end}}
